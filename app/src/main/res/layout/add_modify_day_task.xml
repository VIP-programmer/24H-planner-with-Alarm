<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/add_dialog_shape"
    android:backgroundTint="@color/default_task_color"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    android:padding="10dp"
    android:id="@+id/bottom_sheet_day"
    android:elevation="50dp"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Customize your day"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:layout_marginVertical="10dp"
        android:textColor="@android:color/black"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/createdTasksContainer"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        />
    <LinearLayout
        android:id="@+id/clickToAdd"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="vertical"
        android:background="@drawable/add_plan_holder_shape"
        android:gravity="center"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="add new task"
            android:textSize="18dp"/>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="10dp"
        >
        <android.widget.Button
            android:id="@+id/valideD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/add_button_shape"
            android:text="add"
            android:textColor="@android:color/white"
            android:layout_marginRight="5dp"
            />
        <android.widget.Button
            android:id="@+id/cancelD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cancel_button_shape"
            android:layout_marginLeft="5dp"
            android:text="cancel"
            android:textColor="@android:color/white"
            />
    </LinearLayout>

</LinearLayout>