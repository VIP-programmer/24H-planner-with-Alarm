<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/task_item_shape"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingVertical="10dp"
    android:backgroundTint="#cccccc"
    android:layout_marginHorizontal="10dp"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create new Task"
        android:textSize="22dp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="20dp"
        />

    <EditText
        android:id="@+id/newName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:background="@drawable/input_shape"
        android:textColor="@android:color/black"
        android:hint="Task Name"
        android:gravity="center"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="30dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pick a color"
        android:textSize="19dp"
        android:textColor="@android:color/black"
        android:layout_marginVertical="5dp"
        />
    <Spinner
        android:id="@+id/colorSpinner"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="30dp"
        android:drawSelectorOnTop="true"
        android:layout_marginVertical="5dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Define period"
        android:textSize="19dp"
        android:textColor="@android:color/black"
        android:layout_marginVertical="5dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="10dp"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.5"
            android:gravity="center_horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start"
                android:textSize="18dp"
                android:textColor="@android:color/black"
                android:layout_marginVertical="5dp"
                />
            <!--Start time picker-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- for hours -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Hours"
                        android:textSize="11sp" />
                    <NumberPicker
                        android:id="@+id/pickerHoursS"
                        android:layout_width="wrap_content"
                        android:layout_height="120dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingTop="15.5dp"
                    android:text=":"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- for hours -->
                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:text="Minutes"/>
                    <NumberPicker
                        android:id="@+id/pickerMinutesS"
                        android:layout_width="wrap_content"
                        android:layout_height="120dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        />
                </LinearLayout>
            </LinearLayout>
            <!--End Start time picker-->
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.5"
            android:gravity="center_horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="End"
                android:textSize="18dp"
                android:textColor="@android:color/black"
                android:layout_marginVertical="5dp"
                />
            <!--Start time picker-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- for hours -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Hours"
                        android:textSize="11sp" />
                    <NumberPicker
                        android:id="@+id/pickerHoursE"
                        android:layout_width="wrap_content"
                        android:layout_height="120dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingTop="15.5dp"
                    android:text=":"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- for hours -->
                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:text="Minutes"/>
                    <NumberPicker
                        android:id="@+id/pickerMinutesE"
                        android:layout_width="wrap_content"
                        android:layout_height="120dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        />
                </LinearLayout>
            </LinearLayout>
            <!--End Start time picker-->
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="10dp"
        >
        <android.widget.Button
            android:id="@+id/valideN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/add_button_shape"
            android:text="add"
            android:textColor="@android:color/white"
            android:layout_marginRight="5dp"
            />
        <android.widget.Button
            android:id="@+id/cancelN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cancel_button_shape"
            android:layout_marginLeft="5dp"
            android:text="cancel"
            android:textColor="@android:color/white"
            />
    </LinearLayout>

</LinearLayout>