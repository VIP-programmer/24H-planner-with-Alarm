<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/createdNewTasksContainer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:orientation="horizontal"
    android:background="@drawable/add_plan_shape"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="10dp"
    >
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="0.15"
        android:background="@drawable/add_button_shape"
        android:backgroundTint="#90be6d"
        android:padding="5dp"
        >
        <ImageView
            android:id="@+id/modifyCreatedTask"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/clock"
            android:scaleType="centerInside"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="0.6"
        android:gravity="center"
        android:paddingVertical="2dp"
        >
        <TextView
            android:id="@+id/createsTaskName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="15dp"
            android:textColor="@android:color/white"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/createsTaskStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8H:20min"
                android:textSize="13dp"
                android:textColor="@android:color/white"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="->"
                android:textSize="15dp"
                android:textColor="@android:color/white"
                android:layout_marginHorizontal="10dp"
                />
            <TextView
                android:id="@+id/createsTaskEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8H:20min"
                android:textSize="13dp"
                android:textColor="@android:color/white"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="0.15"
        android:background="@drawable/cancel_button_shape"
        android:backgroundTint="#f9c74f"
        android:padding="5dp"
        >
        <ImageView
            android:id="@+id/deleteCreatedTask"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/delete"
            android:scaleType="centerInside"
            />
    </LinearLayout>

</LinearLayout>